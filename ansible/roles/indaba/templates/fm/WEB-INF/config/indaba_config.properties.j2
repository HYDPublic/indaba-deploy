i18n.resource.src.orig.dir=/Users/jiangjeff/Workspace/indaba/trunk/Builder/web
i18n.resource.src.tagged.dir=/Users/jiangjeff/Workspace/indaba/trunk/Builder/web/i18n_tagged
i18n.resource.backup.dir=/tmp/i18n_backup
i18n.resource.output.dir=/Users/jiangjeff/Workspace/indaba/trunk/Builder/web/i18n_output

